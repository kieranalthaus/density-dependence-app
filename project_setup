// First, create a new Vite project
npm create vite@latest density-dependence-app -- --template react

// Navigate to the project directory
cd density-dependence-app

// Install dependencies
npm install recharts @radix-ui/react-slider @radix-ui/react-tabs lucide-react class-variance-authority clsx tailwindcss-animate
npm install -D tailwindcss postcss autoprefixer
npm install @radix-ui/react-alert-dialog

// Initialize Tailwind CSS
npx tailwindcss init -p
